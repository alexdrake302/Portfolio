  <!-- Script pour l'animation Canvas -->
  <script>
    const canvas = document.getElementById("codeCanvas");
    const ctx = canvas.getContext("2d");

    let width = canvas.width = window.innerWidth;
    let height = canvas.height = window.innerHeight;
    // Utilisation de caractères Katakana pour l'effet Matrix
    const letters = "アァカサタナハマヤャラワガザダバパイィキシチニヒミリヰギジヂビピウゥクスツヌフムユュルグズヅブプエェケセテネヘメレヱゲゼデベペオォコソトノホモヨョロヲゴゾドボポヴッンABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789$+-*/=<>|%#@!^&(){}[]?;";
    const fontSize = 16; // Taille de police légèrement augmentée
    let columns = Math.floor(width / fontSize);
    let drops = Array(columns).fill(1); // Initialiser avec des valeurs différentes pour démarrer aléatoirement ? non, 1 est ok.

    function drawMatrix() {
      // Fond semi-transparent pour créer l'effet de traînée
      ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
      ctx.fillRect(0, 0, width, height);

      ctx.fillStyle = "#00FFFF"; // Couleur verte pour les caractères
      ctx.font = fontSize + "px monospace";

      for (let i = 0; i < drops.length; i++) {
        const text = letters[Math.floor(Math.random() * letters.length)];
        ctx.fillText(text, i * fontSize, drops[i] * fontSize);

        // Renvoyer la goutte en haut aléatoirement ou si elle dépasse l'écran
        if (drops[i] * fontSize > height && Math.random() > 0.975) {
          drops[i] = 0;
        }

        drops[i]++;
      }
    }

    // Démarrer l'animation
    let animationInterval = setInterval(drawMatrix, 50); // Légèrement plus lent (50ms) pour un effet plus classique

    // Ajuster le canvas lors du redimensionnement de la fenêtre
    window.addEventListener("resize", () => {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
      columns = Math.floor(width / fontSize);
      // Redimensionner le tableau drops et le remplir
      drops = Array(columns).fill(1);
       // Optionnel : Redémarrer l'intervalle peut éviter certains artefacts au redimensionnement
      // clearInterval(animationInterval);
      // animationInterval = setInterval(drawMatrix, 50);
    });

    // Initialisation au chargement (peut être redondant si resize est appelé)
     // L'appel initial à resize n'est pas forcément nécessaire si on initialise width/height/columns correctement
     // Cependant, le code original l'avait, gardons-le par sécurité.
     /* window.onload = () => {
        // Déjà fait au début du script, mais assure les dimensions après chargement complet
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
        columns = Math.floor(width / fontSize);
        drops = Array(columns).fill(1);
     }; */

  </script>

  <!-- Script pour le hamburger menu et l'accordéon -->
  <script>
    // Hamburger Menu
    const hamburger = document.getElementById("hamburger");
    const navLinks = document.getElementById("nav-links");

    hamburger.addEventListener("click", () => {
      navLinks.classList.toggle("show");
    });

    // Accordion pour Veille Technologique
    const acc = document.querySelectorAll(".accordion");
    acc.forEach(btn => {
      btn.addEventListener("click", function () {
        // Ferme tous les panneaux ouverts sauf celui cliqué (si déjà ouvert)
         acc.forEach(otherBtn => {
            if (otherBtn !== this && otherBtn.classList.contains('active')) {
                otherBtn.classList.remove('active');
                otherBtn.nextElementSibling.style.display = 'none';
            }
         });

        // Ouvre ou ferme le panneau cliqué
        this.classList.toggle("active");
        const panel = this.nextElementSibling;
        if (panel.style.display === "block") {
          panel.style.display = "none";
        } else {
          panel.style.display = "block";
        }
      });
    });
  </script>

