  <!-- Script pour l'animation Canvas -->
  <script>
    const canvas = document.getElementById("codeCanvas");
    const ctx = canvas.getContext("2d");

    let width = canvas.width = window.innerWidth;
    let height = canvas.height = window.innerHeight;
    // Utilisation de caract√®res Katakana pour l'effet Matrix
    const letters = "„Ç¢„Ç°„Ç´„Çµ„Çø„Éä„Éè„Éû„É§„É£„É©„ÉØ„Ç¨„Ç∂„ÉÄ„Éê„Éë„Ç§„Ç£„Ç≠„Ç∑„ÉÅ„Éã„Éí„Éü„É™„É∞„ÇÆ„Ç∏„ÉÇ„Éì„Éî„Ç¶„Ç•„ÇØ„Çπ„ÉÑ„Éå„Éï„É†„É¶„É•„É´„Ç∞„Ç∫„ÉÖ„Éñ„Éó„Ç®„Çß„Ç±„Çª„ÉÜ„Éç„Éò„É°„É¨„É±„Ç≤„Çº„Éá„Éô„Éö„Ç™„Ç©„Ç≥„ÇΩ„Éà„Éé„Éõ„É¢„É®„Éß„É≠„É≤„Ç¥„Çæ„Éâ„Éú„Éù„É¥„ÉÉ„É≥ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789$+-*/=<>|%#@!^&(){}[]?;";
    const fontSize = 16; // Taille de police l√©g√®rement augment√©e
    let columns = Math.floor(width / fontSize);
    let drops = Array(columns).fill(1); // Initialiser avec des valeurs diff√©rentes pour d√©marrer al√©atoirement ? non, 1 est ok.

    function drawMatrix() {
      // Fond semi-transparent pour cr√©er l'effet de tra√Æn√©e
      ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
      ctx.fillRect(0, 0, width, height);

      ctx.fillStyle = "#00FFFF"; // Couleur verte pour les caract√®res
      ctx.font = fontSize + "px monospace";

      for (let i = 0; i < drops.length; i++) {
        const text = letters[Math.floor(Math.random() * letters.length)];
        ctx.fillText(text, i * fontSize, drops[i] * fontSize);

        // Renvoyer la goutte en haut al√©atoirement ou si elle d√©passe l'√©cran
        if (drops[i] * fontSize > height && Math.random() > 0.975) {
          drops[i] = 0;
        }

        drops[i]++;
      }
    }

    // D√©marrer l'animation
    let animationInterval = setInterval(drawMatrix, 50); // L√©g√®rement plus lent (50ms) pour un effet plus classique

    // Ajuster le canvas lors du redimensionnement de la fen√™tre
    window.addEventListener("resize", () => {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
      columns = Math.floor(width / fontSize);
      // Redimensionner le tableau drops et le remplir
      drops = Array(columns).fill(1);
       // Optionnel : Red√©marrer l'intervalle peut √©viter certains artefacts au redimensionnement
      // clearInterval(animationInterval);
      // animationInterval = setInterval(drawMatrix, 50);
    });

    // Initialisation au chargement (peut √™tre redondant si resize est appel√©)
     // L'appel initial √† resize n'est pas forc√©ment n√©cessaire si on initialise width/height/columns correctement
     // Cependant, le code original l'avait, gardons-le par s√©curit√©.
     /* window.onload = () => {
        // D√©j√† fait au d√©but du script, mais assure les dimensions apr√®s chargement complet
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
        columns = Math.floor(width / fontSize);
        drops = Array(columns).fill(1);
     }; */

  </script>

  <!-- Script pour le hamburger menu et l'accord√©on -->
  <script>
    // Hamburger Menu
    const hamburger = document.getElementById("hamburger");
    const navLinks = document.getElementById("nav-links");

    hamburger.addEventListener("click", () => {
      navLinks.classList.toggle("show");
    });

    // Accordion pour Veille Technologique
    const acc = document.querySelectorAll(".accordion");
    acc.forEach(btn => {
      btn.addEventListener("click", function () {
        // Ferme tous les panneaux ouverts sauf celui cliqu√© (si d√©j√† ouvert)
         acc.forEach(otherBtn => {
            if (otherBtn !== this && otherBtn.classList.contains('active')) {
                otherBtn.classList.remove('active');
                otherBtn.nextElementSibling.style.display = 'none';
            }
         });

        // Ouvre ou ferme le panneau cliqu√©
        this.classList.toggle("active");
        const panel = this.nextElementSibling;
        if (panel.style.display === "block") {
          panel.style.display = "none";
        } else {
          panel.style.display = "block";
        }
      });
    });
  </script>

